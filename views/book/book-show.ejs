<%- include('../partials/header.ejs') %>
    <style>
        h2{
            text-align: center;
        }
        .image__response{
            width: 400px;
            height: 200px;
        }
        @media(max-width: 768px) {
            .image__response{
                max-width: 400px;
                height: auto;
            }
        }
        @media(max-width: 576px) {
            .img_blaock{
                text-align: center;
            }
            .image__response{
                max-width: 100%;
                height: 200px;
            }
        }
    </style>
<div class="container">
    <h2>Батафсил малумот</h2>
    <div class="row">
        <div class="col-sm-6">
             <div class="img_blaock">
                 <img class="image__response" src="/<%= books.image %>" alt="">
             </div>   
        </div>
        <div class="col-sm-6">
            <ul class="list-group">
                <li class="list-group-item"> <strong>Категорияси:</strong> <%= books.category_id.name %></li>
                <li class="list-group-item"> <strong>Пробаси:</strong><%= books.proba %></li>
                <li class="list-group-item"> <strong>Тоши:</strong><%= books.toshi %></li>
                <li class="list-group-item"> <strong>Тошсиз Вазни:</strong><%= books.ToshBilanVazni %></li>
                <li class="list-group-item"> <strong>Умумий Вазни:</strong><%= books.AllVazni %></li>
                <li class="list-group-item"> <strong>Каерники:</strong><%= books.qaerniki %></li>
                <li class="list-group-item"> <strong>Олинган нархи:</strong><%= books.OlinganNarxi %></li>
                <li class="list-group-item"> <strong>Сотилиш нархи:</strong><%= books.SotilishNarxi %></li>
            </ul>
        </div>
    </div>
</div>



<%- include('../partials/footer.ejs') %>